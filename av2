CREATE TABLE Condominio (
    idCondominio INT NOT NULL,
    nome VARCHAR(100) NOT NULL,
    endereco VARCHAR(200),
    num VARCHAR(10),
    cep VARCHAR(15),
    bairro VARCHAR(50),
    cidade VARCHAR(50),
    estado VARCHAR(50),
    proprietario VARCHAR(100),
    cnpj VARCHAR(20)
);

